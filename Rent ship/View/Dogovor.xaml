        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Лодка" HorizontalAlignment="Center" Margin="10,10,358,183" VerticalAlignment="Center" RenderTransformOrigin="0.289,0.115"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Сотрудник" HorizontalAlignment="Center" Margin="135,10,208,183" VerticalAlignment="Center" RenderTransformOrigin="0.493,0.538"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Клиент" HorizontalAlignment="Center" Margin="261,10,103,183" VerticalAlignment="Center"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Дата оформления" HorizontalAlignment="Center" Margin="10,68,293,125" VerticalAlignment="Center"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Дата сдачи" HorizontalAlignment="Center" Margin="135,68,206,125" VerticalAlignment="Center"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Дата окончания аренды" HorizontalAlignment="Center" Margin="260,68,9,125" VerticalAlignment="Center"/>
        <Label FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" Content="Сумма" HorizontalAlignment="Center" Margin="10,128,356,65" VerticalAlignment="Center" RenderTransformOrigin="-1.652,0.231"/>
