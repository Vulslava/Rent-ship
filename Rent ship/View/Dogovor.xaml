        <DatePicker FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" HorizontalAlignment="Center" Margin="260,99,32,96" VerticalAlignment="Center" Width="120"/>
        <TextBox FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" HorizontalAlignment="Center" Height="22" Margin="10,160,282,37" TextWrapping="Wrap" Text="{Binding Summa, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="120"/>
        <ComboBox FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" HorizontalAlignment="Center" Margin="10,41,282,156" VerticalAlignment="Center" Width="120" ItemsSource="{Binding L}" SelectedItem="{Binding SelectedShip}" DisplayMemberPath="Name"/>
        <ComboBox FontFamily="Times New Roman" FontWeight="UltraBold" FontStyle="Italic" HorizontalAlignment="Center" Margin="135,41,157,156" VerticalAlignment="Center" Width="120" ItemsSource="{Binding S}" SelectedItem="{Binding SelectedSotrudnik}" DisplayMemberPath="Name"/>
